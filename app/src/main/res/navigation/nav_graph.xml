<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.allam.a3movies.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.allam.a3movies.ui.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <action
            android:id="@+id/action_detailsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="movieId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>

    <fragment
        android:id="@+id/home_movie"
        android:name="com.allam.a3movies.ui.home.HomeFragment"
        android:label="fragment_first"
        />
    <fragment
        android:id="@+id/suggested_movie"
        android:name="com.allam.a3movies.ui.suggested.SuggestedFragment"
        android:label="fragment_second"
        />
    <fragment
        android:id="@+id/favorite_movie"
        android:name="com.allam.a3movies.ui.favourites.FavouritesFragment"
        android:label="fragment_third"
        />
    <fragment
        android:id="@+id/user_movie"
        android:name="com.allam.a3movies.ui.user.UserFragment"/>

</navigation>